# Database Configuration
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@localhost:5432/sma-db?schema=public"

# For Docker deployment, use:
# DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@postgres:5432/sma-db?schema=public"

# PostgreSQL Password (used in docker-compose)
POSTGRES_PASSWORD=your_secure_postgres_password

# NextAuth Configuration
# IMPORTANT: Generate a secure random string for production
# You can generate one with: openssl rand -base64 32
AUTH_SECRET=your-secret-key-change-this-in-production-minimum-32-characters

# App URL
# For local development:
NEXTAUTH_URL=http://localhost:3000

# For production (replace with your domain):
# NEXTAUTH_URL=https://yourdomain.com

# Default Admin Password (for database seeding only)
# WARNING: Change immediately after first login in production!
DEFAULT_ADMIN_PASSWORD=change-me-in-production
